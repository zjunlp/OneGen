{
    "onegen": {
        "loss_type": "BPR",
        "info_nce_temperature": 0.02,
        "n_pos_per_sent": 1,
        "n_neg_per_pos": 4,
        "lambda_r": 1,
        "lambda_g": 1
    },
    "special_token_list": {
        "GEN":{
            "[_CONTINUE_]": "continue to output"
        },
        "RET": {
            "[SE]": "description of entity",
            "[LK]": "information of subject or object"
        },
        "CTX": {}
    },
    "info-data-db": {
        "file_path": "./data/train_data/entity_linking/db.jsonl",
        "cache_file_path": "./data/train_data/entity_linking/db.cache",
        "repr_token": ["[SE]"],
        "mask_token_from_to": [],
        "templator": "DocumentTemplator"
    },
    "info-data-train": {
        "file_path": "./data/train_data/entity_linking/train.jsonl",
        "cache_file_path": "./data/train_data/entity_linking/train.cache",
        "repr_token": ["[LK]"],
        "mask_token_from_to": [],
        "templator": "EntityLinking_Llama2Templator"
    },
    "info-model":{
        "model_path": "meta-llama/Llama-2-7b-chat-hf",
        "tokenizer_path": "meta-llama/Llama-2-7b-chat-hf",
        "model_type": "llama2",
        "max_length": 1300,
        "padding_side": "right",
        "padding_label_id": -100,
        "padding_input_id": 2
    },
    "train": {
        "gradient_checkpointing": true,
        "learning_rate": 5e-6,
        "optim": "adamw_torch",
        "do_eval": false,
        "logging_steps": 1,
        "save_steps": 500,
        "report_to": "tensorboard",
        "save_total_limit": 10,
        "per_device_train_batch_size": 5,
        "gradient_accumulation_steps": 2,
        "load_best_model_at_end": false,
        "num_train_epochs": 6,
        "bf16": true,
        "fp16": false,
        "output_dir": "./output/entity_linking/llama2",
        "deepspeed": "./config/deepspeed_config/ds_z3_config.json",
        "save_only_model": true
    },
    "resume_checkpoint_path": null
}