{
    "onegen": {
        "loss_type": "BPR",
        "info_nce_temperature": 0.02,
        "n_pos_per_sent": 2,
        "n_neg_per_pos": 6,
        "lambda_r": 1,
        "lambda_g": 1
    },
    "special_token_list": {
        "GEN":{},
        "RET": {
            "[Question Representation]": "infomation of question",
            "[Document Fragment Representation]": "information of document fragment"
        },
        "CTX": {
            "<paragraph>": "a tag to indicate the start of the retrieved document begins here", 
            "</paragraph>": "a tag to indicate the end of the retrieved document starts here"
        }
    },
    "info-data-db": {
        "file_path": "./data/train_data/multi_hop_qa/db.jsonl",
        "cache_file_path": "./data/train_data/multi_hop_qa/db.cache.llama2",
        "repr_token": ["[Document Fragment Representation]"],
        "mask_token_from_to": [],
        "templator": "DocumentTemplator",
        "hf_path": {
            "repo": "zjunlp/OneGen-TrainDataset-MultiHopQA",
            "name": "db.jsonl"
        }
    },
    "info-data-train": {
        "file_path": "./data/train_data/multi_hop_qa/train.jsonl",
        "cache_file_path": "./data/train_data/multi_hop_qa/train.cache.llama2",
        "repr_token": ["[Question Representation]"],
        "mask_token_from_to": [["<paragraph>", "</paragraph>"]],
        "templator": "DocumentTemplator",
        "hf_path": {
            "repo": "zjunlp/OneGen-TrainDataset-MultiHopQA",
            "name": "train.jsonl"
        }
    },
    "info-model":{
        "model_path": "meta-llama/Llama-2-7b-chat-hf",
        "tokenizer_path": "meta-llama/Llama-2-7b-chat-hf",
        "model_type": "llama2",
        "model_class": "LlamaForCausalLM",
        "max_length": 1200,
        "padding_side": "right",
        "padding_label_id": -100,
        "padding_input_id": 2
    },
    "train": {
        "gradient_checkpointing": true,
        "learning_rate": 2e-5,
        "optim": "adamw_torch",
        "do_eval": false,
        "logging_steps": 1,
        "save_steps": 500,
        "report_to": "tensorboard",
        "save_total_limit": 10,
        "per_device_train_batch_size": 2,
        "gradient_accumulation_steps": 4,
        "load_best_model_at_end": false,
        "num_train_epochs": 3,
        "bf16": true,
        "fp16": false,
        "output_dir": "./output/multi_hop_qa/llama2",
        "deepspeed": "./config/deepspeed_config/ds_z3_config.json",
        "save_only_model": true
    },
    "resume_checkpoint_path": null
}